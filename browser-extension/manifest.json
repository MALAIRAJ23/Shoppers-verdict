{
  "manifest_version": 3,
  "name": "Shopper's Verdict",
  "version": "1.0.0",
  "description": "AI-powered shopping assistant that analyzes product reviews and provides worth-to-buy scores",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.amazon.in/*",
    "https://www.amazon.com/*",
    "https://www.flipkart.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.in/*",
        "https://amazon.in/*",
        "https://www.amazon.com/*",
        "https://amazon.com/*",
        "https://www.flipkart.com/*",
        "https://flipkart.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shopper's Verdict",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
